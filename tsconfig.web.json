{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/utils/*.ts",
    "src/types/*.ts",
    "src/api/*.ts"
  ],
  "compilerOptions": {
     "noUnusedLocals": false,
     "noUnusedParameters": false,
     "composite": true,
    "jsx": "react-jsx",
    "baseUrl": "src/renderer/src",
    "paths": {
      "@utils/*": ["../../utils/*"],
      "@globalTypes/*": ["../../types/*"]
    }
  }
}
